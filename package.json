{
  "name": "create-open-source-library",
  "version": "0.0.0-development",
  "description": "Get random starwars names",
  "main": "dist/index.js",
  "scripts": {
    "cm": "git-cz",
    "test": "mocha src/index.test.js",
    "test:watch": "mocha src/index.test.js -w",
    "test:coverage": "nyc npm run test",
    "test:report": "nyc --reporter=lcov --reporter=text yarn test",
    "coverage": "jest --forceExit --coverage --no-cache",
    "semantic-release": "semantic-release",
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/basantech89/starwars-names.git"
  },
  "keywords": [
    "random",
    "star",
    "wars"
  ],
  "author": "Basant Soni <basantech89@gmail.com> (https://basant.netlify.app/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/basantech89/starwars-names/issues"
  },
  "homepage": "https://github.com/basantech89/starwars-names#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "npm run test:coverage"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "files": [
    "dist",
    "README.md"
  ],
  "nyc": {
    "all": true,
    "check-coverage": true,
    "branches": 20,
    "lines": 20,
    "functions": 0,
    "statements": 20,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.spec.js",
      "**/*.test.js"
    ]
  },
  "jest": {
    "collectC                                                                                                                                                                                  overage": true,
    "coverageReporters": [
      "json",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "4.3.4",
    "commitizen": "4.2.4",
    "commitlint-config-gitmoji": "^2.2.5",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "^6.3.0",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "lint-staged": "12.1.3",
    "mocha": "9.1.3",
    "nyc": "15.1.0",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2"
  }
}
