{
  "name": "create-open-source-library",
  "version": "0.0.0-semantically-released",
  "description": "Get random starwars names",
  "main": "src/index.js",
  "scripts": {
    "cm": "git-cz",
    "test": "mocha src/index.test.js",
    "semantic-release": "semantic-release",
    "coverage": "jest --forceExit --coverage --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/basantech89/starwars-names.git"
  },
  "keywords": [
    "random",
    "star",
    "wars"
  ],
  "author": "Basant Soni <basantech89@gmail.com> (https://basant.netlify.app/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/basantech89/starwars-names/issues"
  },
  "homepage": "https://github.com/basantech89/starwars-names#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "chai": "4.3.4",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "lint-staged": "12.1.3",
    "mocha": "9.1.3",
    "prettier": "2.5.1",
    "semantic-release": "^18.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "npm run coverage"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": ["json", "html"],
    "coverageThreshold": {
      "global": {
          "branches": 90,
          "functions": 90,
          "lines": 90,
          "statements": 90
      }
    }
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      "{name: 'beta', prerelease: true}",
      "{name: 'alpha', prerelease: true}"
    ]
  }
}
