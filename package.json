{
  "name": "create-open-source-library",
  "version": "0.0.0-semantically-released",
  "description": "Get random starwars names",
  "main": "src/index.js",
  "scripts": {
    "cm": "git-cz",
    "test": "mocha src/index.test.js",
    "test:watch": "mocha src/index.test.js -w",
    "test:coverage": "nyc npm run test",
    "test:report": "nyc --reporter=lcov --reporter=text-summary npm run test",
    "coverage": "jest --forceExit --coverage --no-cache",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/basantech89/starwars-names.git"
  },
  "keywords": [
    "random",
    "star",
    "wars"
  ],
  "author": "Basant Soni <basantech89@gmail.com> (https://basant.netlify.app/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/basantech89/starwars-names/issues"
  },
  "homepage": "https://github.com/basantech89/starwars-names#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "chai": "4.3.4",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "lint-staged": "12.1.3",
    "mocha": "9.1.3",
    "nyc": "15.1.0",
    "prettier": "2.5.1",
    "semantic-release": "^18.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "npm run test:coverage"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "branches": 20,
    "lines": 20,
    "functions": 0,
    "statements": 20,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.spec.js",
      "**/*.test.js"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      "{name: 'beta', prerelease: true}",
      "{name: 'alpha', prerelease: true}"
    ]
  }
}
